<%- include('partials/header') %>

<div style="height: 20vh;"></div>


<div class="container">
    <div class="row d-flex justify-content-center">
        <h3>Create a blog</h3>
    </div>
    <div style="height: 5vh;"></div>
    <div class="row">
        <div class="col-md-3 col-sm-1"></div>
        <div class="col-md-6 col-sm-10" >
        <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label class="form-label">title</label>
                <input class="form-control" type="text" name="blog[title]" value="<%= blog.title %>" >
            </div>
            <div class="form-group">
                <label class="form-label">image</label>
                <input class="form-control" type="text" name="blog[image]" value="<%= blog.image %>" >
            </div>
            <div class="form-group">
                <label class="form-label">body</label>
                <textarea class="form-control" type="text" name="blog[body]" ><%= blog.body %></textarea>
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Subbmit</button>
        </form>
    </div>
        <div class="col-md-3 col-sm-1"></div>
    </div>
</div>


<%- include('partials/footer') %>